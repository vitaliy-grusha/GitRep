#!/bin/bash

ABSOLUTE_PATH="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
command="$1"
filename="$ABSOLUTE_PATH/gitrep.data"

if [ ! -e "$filename" ]; then
    echo -n "" >> "$filename"
	truncate -s 0 "$filename"
fi 

if [ "$command" == "go" ] ; then

	
	while read -r line
	do
	    data="$line"
	    name="${data%%=*}"
		path="${data##*=}"

		a="$name"
		b="$2"

		if [ "$a" == "$b" ]; then
	    	cd $path
		fi
	done < "$filename"
fi

if [ "$command" == "add" ] ; then
	newpath="$(pwd)"
	exists="0"
	while read -r line
	do
	    data="$line"
	    name="${data%%=*}"
		path="${data##*=}"

		if [ "$name" == "$2" ]; then
	    	echo "GitRep: this name is already exists."
			exists="1"
			break
		fi
		if [ "$path" == "$newpath" ]; then
	    	echo "GitRep: this path is already exists."
			exists="1"
			break
		fi

	done < "$filename"
	if [ "$exists" == "0" ] ; then
		echo "$2=$newpath" >> $filename
		echo "GitRep: repository added to list."
	fi
fi

if [ "$command" == "delete" ] ; then
	echo -n "" >> "gitrepnew.data"
	truncate -s 0 "gitrepnew.data"
	while read -r line
	do
	    data="$line"
	    name="${data%%=*}"
		path="${data##*=}"

		if [ "$name" == "$2" ]; then
	    	echo "GitRep: repository name deleted."
		else 
			echo "$line" >> "gitrepnew.data"
		fi

	done < "$filename"
	mv "gitrepnew.data" "$filename"
fi

if [ "$command" == "list" ] ; then
	cat $filename
fi

if [[ ("$command" == "help") || ("$command" == "") ]] ; then
	echo ""
	echo "GitRep: v1.0"
	echo "Vitaliy Grusha"
	echo "Access easily to your repositories by a short name."
	echo ""
	echo "Commands:"
	echo ""
	echo "    gitrep add <shortname>"
	echo "        Attach current path to shortname."
	echo ""
	echo "    gitrep delete <shortname>"
	echo "        Delete shortname."
	echo ""
	echo "    gitrep list"
	echo "        Show list of all registred shortnames."
	echo ""
	echo "    gitrep go <shortname>"
	echo "        Change current directory on attached to shortname."
	echo ""
fi
